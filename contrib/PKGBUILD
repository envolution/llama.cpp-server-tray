# Maintainer: envolution

pkgname=llama.cpp-server-tray
pkgver=1
pkgrel=1
pkgdesc="Companion system tray app for llama.cpp-server-service"
arch=('any')
url="https://github.com/envolution/llama.cpp-server-tray"
license=('MIT')
depends=('pyside6' 'python')
options=(!strip !debug)
source_x86_64=("http://github.com/envolution/${pkgname}/releases/download/v${pkgver}/${pkgname}.tar.gz")
sha256sums_x86_64=('ca5512e96ac66af356d566eba019c22de78c05e057e35a27b7029e40bba0ebfb')

package() {
  cd $pkgname
  install -Dm 755 $pkgname $pkgdir/usr/bin/$pkgname
  install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
